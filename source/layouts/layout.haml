%html{:class => "no-js", :lang => "#{data.site.lang}"}
  <!--<![endif]-->
  %head
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}

    -# Pull in the page title
    %title
      = data.site.title unless data.page.title?
      = data.page.title + ' - ' + data.site.title if data.page.title?

    %meta{:name => "description", :content => "#{data.site.description}"}
    %meta{:name => "author", :content => "#{data.site.author}"}
    %meta{:name =>"viewport", :content => "width=device-width"}

    = stylesheet_link_tag "main"
    = javascript_include_tag "application-top"

  %body
    .container
      %header.header

      .content{:role => "main", :class => "#{data.page.page_class}"}
        -# Render Content here.
        = yield

      %footer.footer

    = javascript_include_tag "application-bottom"
