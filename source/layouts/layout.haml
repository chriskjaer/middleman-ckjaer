%html{:class => "no-js", :lang => "#{data.site.lang}"}
  <!--<![endif]-->
  %head
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}

    -# Pull in the page title
    %title= yield_content(:title).blank? ? data.site.title : yield_content(:title) + " - " + data.site.title

    %meta{:name => "description", :content => "#{yield_content(:description).blank? ? data.site.description : yield_content(:description)}"}
    %meta{:name => "author", :content => "#{data.site.author}"}
    %meta{:name =>"viewport", :content => "width=device-width"}

    = stylesheet_link_tag "main"
    = javascript_include_tag "application-top"

  %body{:class => "#{@bodyclass}"}
    .container.content{:role => "main"}

      -# Render Content here.
      = yield

      %footer

    = javascript_include_tag "application-bottom"
